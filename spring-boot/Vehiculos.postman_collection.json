{
  "info": {
    "name": "Vehiculos API",
    "description": "Colección Postman para probar el CRUD de vehículos en Spring Boot + MongoDB",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "vehiculoId", "value": "" }
  ],
  "item": [
    {
      "name": "Listar vehículos",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/vehiculos"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 200', function () {",
              "  pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Crear vehículo",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"marca\": \"Toyota\",\n  \"modelo\": \"Corolla\",\n  \"placa\": \"ABC-123\",\n  \"color\": \"Rojo\",\n  \"anio\": 2015\n}"
        },
        "url": "{{baseUrl}}/vehiculos"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 201', function () {",
              "  pm.response.to.have.status(201);",
              "});",
              "var json = pm.response.json();",
              "pm.collectionVariables.set('vehiculoId', json.id);",
              "pm.test('ID capturado', function () {",
              "  pm.expect(pm.collectionVariables.get('vehiculoId')).to.be.a('string');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Obtener por ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/vehiculos/{{vehiculoId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 200', function () {",
              "  pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Actualizar por ID",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"marca\": \"Toyota\",\n  \"modelo\": \"Yaris\",\n  \"placa\": \"ABC-123\",\n  \"color\": \"Azul\",\n  \"anio\": 2018\n}"
        },
        "url": "{{baseUrl}}/vehiculos/{{vehiculoId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 200', function () {",
              "  pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Eliminar por ID",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": "{{baseUrl}}/vehiculos/{{vehiculoId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 204', function () {",
              "  pm.response.to.have.status(204);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}